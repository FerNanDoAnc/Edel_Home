<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edtnombreusuario"
        android:layout_width="match_parent"
        android:drawablePadding="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="Nombre usuario"
        android:drawableStart="@drawable/ic_person"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="60dp"
        android:textAlignment="textStart"
   />
    <EditText
        android:id="@+id/edtcorreoelectronico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:drawablePadding="20dp"
        android:drawableStart="@drawable/ic_email_black"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="textStart"
        android:layout_marginEnd="60dp"
 />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Nueva ontraseña"
        android:drawablePadding="20dp"
        android:id="@+id/edtclave"
        android:drawableStart="@drawable/ic_clave"
        android:textAlignment="textStart"
        android:layout_marginEnd="60dp"/>
    <EditText
        android:id="@+id/edtclaveconfirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:drawablePadding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Confirmar ontraseña"
        android:drawableStart="@drawable/ic_clave"
        android:textAlignment="textStart"
        android:layout_marginEnd="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="60dp">

        <Button
            android:id="@+id/btncancelar"
            android:layout_width="113dp"
            android:layout_height="32dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:background="#ff00"
            android:text="Cancelar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnguardarnuevousuario"
            android:layout_width="113dp"
            android:layout_height="32dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="20dp"
            android:background="#000"
            android:text="Guardar"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>
