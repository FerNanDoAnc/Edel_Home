<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_general"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/logo_blanco"
        android:layout_width="275sp"
        android:layout_height="321sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="176dp"
        android:contentDescription="@string/empty_contentDescription"
        android:background="@drawable/blanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="246sp"
        android:layout_height="191sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/empty_contentDescription"
        android:layout_marginStart="32sp"
        android:layout_marginTop="4sp"
        android:layout_marginEnd="32sp"
        android:src="@drawable/foco1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="161sp"
        android:layout_height="30sp"
        android:layout_marginTop="12sp"
        android:text="@string/text_login_welcome"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="245sp"
        android:layout_height="41sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="68sp"
        android:layout_marginEnd="8sp"
        android:ems="10"
        android:hint="@string/text_login_input_user_hint"
        android:inputType="textPersonName"
        android:textColor="#000"
        android:textColorHint="#212121"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/clave"
        android:layout_width="245sp"
        android:layout_height="45sp"
        android:layout_marginTop="16sp"
        android:ems="10"
        android:hint="@string/text_login_input_password_hint"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#212121"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="245sp"
        android:layout_height="35sp"
        android:layout_marginTop="32sp"
        android:background="@drawable/btn"
        android:text="@string/text_login_button_do_login"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clave" />



</androidx.constraintlayout.widget.ConstraintLayout>